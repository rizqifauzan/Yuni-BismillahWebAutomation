<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Atur level logging untuk package tertentu jika terlalu banyak output -->
    <logger name="io.cucumber" level="info"/>
    <logger name="org.openqa.selenium" level="warn"/>
    <logger name="okhttp3" level="warn"/>
    <logger name="io.netty" level="warn"/>
    <logger name="io.github.bonigarcia" level="info"/>
    <logger name="com.example.myproject" level="info"/>
</configuration>
